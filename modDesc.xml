<?xml version="1.0" encoding="utf-8"?>
<modDesc descVersion="103">
    <author>Jessie Crider (CriderGPT)</author>
    <version>1.1.0.0</version>

    <!-- Localized Title & Description -->
    <title>
        <en>J.R. Hoback Jr. Memorial Headstone</en>
    </title>

    <description>
        <en><![CDATA[
        A handcrafted 3D model of the J.R. Hoback Jr. memorial headstone.  
        Designed and modeled in honor of family heritage and local history.  
        This decorative monument can be placed anywhere on your farm under  
        Build Mode → Decorations → Other.
        ]]></en>
    </description>

    <!-- Icon shown in the store -->
    <iconFilename>storeIcon.dds</iconFilename>

    <!-- Multiplayer support -->
    <multiplayer supported="true"/>

    <!-- Mod Category (FS25 build menu indexing) -->
    <category>decorations</category>

    <!-- Register the placeable for in-game store -->
    <storeItems>
        <storeItem xmlFilename="placeable.xml"/>
    </storeItems>

    <!-- Branding -->
    <brands>
        <brand name="CriderGPT"/>
    </brands>
</modDesc>

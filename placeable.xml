<?xml version="1.0" encoding="utf-8"?>
<placeable type="staticObject">

    <!-- 📦 Base object setup -->
    <base>
        <type>static</type>
        <filename>JRHeadstone.i3d</filename>
        <clearAreasOnSale>false</clearAreasOnSale>
        <boughtWithFarmland>true</boughtWithFarmland>
    </base>

    <!-- 🏷️ Store / build-menu data -->
    <storeData>
        <name>J.R. Hoback Jr. Memorial Headstone</name>
        <description>
            Handcrafted 3D memorial headstone honoring J.R. Hoback Jr., 
            designed for placement under Decoration → Other.
        </description>
        <image>storeIcon.dds</image>
        <brand>CriderGPT</brand>
        <price>300</price>
        <dailyUpkeep>45</dailyUpkeep>

        <!-- 🧱 FS25 build-menu assignment -->
        <brush>
            <type>staticObject</type>
            <category>decoration</category>
            <subCategory>other</subCategory>
            <placementCategory>decoration</placementCategory>
        </brush>
    </storeData>

    <!-- ⚙️ Placement behavior -->
    <placement>
        <useRandomRotation>false</useRandomRotation>
        <useWorldXZRotation>true</useWorldXZRotation>
        <allowOverlap>false</allowOverlap>
    </placement>

    <!-- 🚫 Collision setup -->
    <collisions active="true"/>

</placeable>

